#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    int *arr, n, i;
    cout << "Enter size of array: ";
    cin >> n;
    arr = new int[n];
    for (i = 0; i < n; i++)
    {
        cout << i << ": ";
        cin >> arr[i];
    }
    int c, counter = 0;
    cout << "Enter c: ";
    cin >> c;
    for (i = 0; i < n; i++)
    if (arr[i] > c)
        counter++;
    cout << "Elements > c: " << counter;
    int max = abs(arr[0]);
    counter = 0;
    for (i = 0; i < n; i++)
    if (abs(arr[i]) > max)
    {
        counter = i;
        max = abs(arr[i]);
    }
    int mult = 1;
    for (i = counter + 1; i < n; i++)
        mult *= arr[i];
    if (counter == n - 1)
        mult = 0;
    cout << "\nMultiplication of elements after max |element|: " << mult;
    double tmp;
    int k = 0;
    for (int i = 0; i < n; i++){
        if (arr[i] < 0){
            tmp = arr[k];
            arr[k] = arr[i];
            arr[i] = tmp;
            k++;
        }
    }
    cout << "\nReorganised:\n";
    for (i = 0; i < n; i++)
        cout << arr[i] << ' ';
    cout << endl;
    delete[]arr;
    system("pause");
}
